@model MCQAssignment3.Models.QuizViewModel

<h2>Question @(@ViewBag.CurrentQuestionIndex + 1) of @ViewBag.TotalQuestions</h2>
<p>@Model.Questions[@ViewBag.CurrentQuestionIndex].Text</p>

<form method="post" asp-action="Answer">
    @for (int i = 0; i < Model.Questions[@ViewBag.CurrentQuestionIndex].Options.Length; i++)
    {
        <div>
            <input type="radio" id="option-@i" name="selectedOption" value="@i"
                   @(Model.SelectedAnswer == i ? "checked" : "") required />
            <label for="option-@i">@Model.Questions[@ViewBag.CurrentQuestionIndex].Options[i]</label>
        </div>
    }
    <button type="submit">Next</button>
</form>

<!-- Back button for going to the previous question -->
<form method="post" asp-action="GoBack">
    <button type="submit" @(ViewBag.CurrentQuestionIndex == 0 ? "disabled" : "")>Back</button>
</form>

@model MCQAssignment3.Models.Question
@using MCQAssignment3.Services

<h2>Question @ViewBag.CurrentQuestionIndex of @ViewBag.TotalQuestions</h2>
<p>@Model.Text</p>

<form method="post" asp-action="Answer">
    @for (int i = 0; i < Model.Options.Length; i++)
    {
        <div>
            <input type="radio" id="option-@i" name="selectedOption" value="@i"
                   @(ViewBag.SelectedAnswer == i ? "checked" : "") required />
            <label for="option-@i">@Model.Options[i]</label>
        </div>
    }
    <button type="submit">Next</button>
</form>

<!-- Back button for going to the previous question -->
<form method="post" asp-action="GoBack">
    <button type="submit" @(ViewBag.CurrentQuestionIndex == 1 ? "disabled" : "")>Back</button>
</form>
